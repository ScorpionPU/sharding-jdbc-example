<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shardingjdbc.mapper.UserMapper">

    <resultMap id="baseResultMap" type="com.shardingjdbc.entity.User">
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_name_plain" property="userNamePlain"/>
        <result column="pwd" property="pwd"/>
        <result column="assisted_query_pwd" property="assistedQueryPwd"/>
    </resultMap>

    <insert id="addUser">
        INSERT INTO user (
        user_id,
        user_name,
        user_name_plain,
        pwd,
        assisted_query_pwd
        )
        VALUES (
        #{userId},
        #{userName},
        #{userNamePlain},
        #{pwd},
        #{assistedQueryPwd}
        )
    </insert>

    <select id="list" resultMap="baseResultMap">
        SELECT
            user_id,
            user_name,
            user_name_plain,
            pwd,
            assisted_query_pwd
         FROM user
    </select>

</mapper>
